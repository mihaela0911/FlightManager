@model Data.Entities.Flight

@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <p>
        @if (AuthUser.LoggedUser is not null && AuthUser.LoggedUser.IsAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        <a asp-action="Index">Back to List</a>
    </p>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TakeOff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TakeOff)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Landing)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Landing)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeOfPlane)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeOfPlane)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlaneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PilotName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PilotName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapacityOfPassengers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapacityOfPassengers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapacityOfBusinessClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapacityOfBusinessClass)
        </dd>
        <dt class="col-sm-2">
            <p>Flight time</p>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.GetFlightTime()</p>
        </dd>
    </dl>
</div>

@if (AuthUser.LoggedUser is not null && AuthUser.LoggedUser.IsAdmin)
{
    <div>

        <h4>Reservations for this flight</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Second Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Egn
                    </th>
                    <th>
                        Telephone Number
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Egn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telephone)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
